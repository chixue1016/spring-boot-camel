<?xml version="1.0" encoding="UTF-8"?>
  <routes xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="direct:A"/>
      <transform>
        <simple>A1[ ${body} ]</simple>
      </transform>
      <to uri="direct:B"/>
      <transform>
        <simple>A2[ ${body} ]</simple>
      </transform>
      <to uri="mock:endA"/>
    </route>
    <route>
      <from uri="direct:B"/>
      <transform>
        <simple>B[ ${body} ]</simple>
      </transform>
      <to uri="mock:endB"/>
    </route>

  </routes>
